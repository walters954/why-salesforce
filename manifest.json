{
    "manifest_version": 3,
    "name": "Why Salesforce",
    "version": "1.3",
    "permissions": [
        "storage"
    ],
    "description": "Stuff that Salesforce should have already added... Adding flow and user tabs into setup.",
    "homepage_url": "https://github.com/walters954/why-salesforce",
    "content_scripts": [
        {
            "matches": [
                "*://*.lightning.force.com/lightning/setup/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "images/whysf16.png",
        "32": "images/whysf32.png",
        "48": "images/whysf48.png",
        "128": "images/whysf128.png"
    },
    "action": {
        "default_title": "Why Salesforce",
        "default_popup": "popup.html"
    },
    "background": {
        "type": "module",
        "scripts": [
            "background.js"
        ]
    },
    "incognito": "spanning"
}
