{
    "manifest_version": 3,
    "name": "Why Salesforce",
    "version": "1.3",
    "permissions": ["storage"],
    "description": "Stuff that Salesforce should have already added... Easily setting favourite tabs in Setup.",
    "homepage_url": "https://github.com/walters954/why-ralesforce",
    "content_scripts": [
        {
            "matches": [
                "*://*.lightning.force.com/lightning/setup/*"
            ],
            "js": ["./salesforce/content.js", "./dragHandler.js", "./salesforce/import.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "images/whysf16.png",
        "32": "images/whysf32.png",
        "48": "images/whysf48.png",
        "128": "images/whysf128.png"
    },
    "action": {
        "default_title": "Why Salesforce",
        "default_popup": "./action/popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "minimum_chrome_version": "120.0.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "whysf@plugin",
            "strict_min_version": "117"
        },
        "safari": {
            "strict_min_version": "17.2"
        }
    },
    "incognito": "spanning"
}

