{
    "manifest_version": 3,
    "name": "Why Salesforce",
    "version": "1.3",
    "permissions": ["storage"],
    "description": "Stuff that Salesforce should have already added... Setting favourite tabs in Setup.",
    "homepage_url": "https://github.com/Astisme/why-salesforce-reloaded",
    "content_scripts": [
        {
          "matches": [
            "*://*.lightning.force.com/lightning/setup/*"
          ],
          "js": ["./salesforce/content.js"],
          "run_at": "document_end"
        }
      ],
    "icons": {
      "16": "images/whysf16.png",
      "32": "images/whysf32.png",
      "48": "images/whysf48.png",
      "128": "images/whysf128.png"
    },
    "action": {
        "default_title": "Why Salesforce",
        "default_popup": "./action/popup.html"
    },
    "minimum_chrome_version": "120.0.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "whysf@plugin.reloaded",
            "strict_min_version": "112.0.2"
        },
        "safari": {
            "strict_min_version": "14"
        }
    },
    "incognito": "spanning"
}

